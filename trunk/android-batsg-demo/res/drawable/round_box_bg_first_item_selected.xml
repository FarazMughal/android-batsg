<?xml version="1.0" encoding="utf-8"?>
<!-- Make a rounded border for the first item. -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="@color/round_box_item_gradient_start"
        android:endColor="@color/round_box_item_gradient_end"
        android:angle="270"
        />
    <stroke
        android:width="1dp"
        android:color="@color/round_box_border" />
    <!-- Round the top-left and top-right -->
    <corners
        android:radius="1dp"
        android:topLeftRadius="@dimen/round_box_corner_radius"
        android:bottomLeftRadius="0dp"
        android:topRightRadius="@dimen/round_box_corner_radius"
        android:bottomRightRadius="0dp"
        />
</shape>