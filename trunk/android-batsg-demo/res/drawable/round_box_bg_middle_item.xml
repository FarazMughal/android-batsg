<?xml version="1.0" encoding="utf-8"?>
<!-- Make a rounded border for the middle item, with the top opened. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:top="-2dp"><!-- Make the top border cleared. -->
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/round_box_border" />
        </shape>
    </item>
</layer-list>