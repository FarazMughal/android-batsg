<?xml version="1.0" encoding="utf-8"?>
<!-- Make a round border for -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="@color/round_box_item_gradient_start"
        android:endColor="@color/round_box_item_gradient_end"
        android:angle="270"
        />
    <stroke
        android:width="1dp"
        android:color="@color/round_box_border" />
    <corners
        android:radius="10dp"
        />
</shape>